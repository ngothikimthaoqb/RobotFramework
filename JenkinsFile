timeout(time: 5, unit: 'MINUTES') {
    node {
           def workspace = pwd()

           stage("Cleaning workspace") {
              sh "rm -rf ${workspace}/*"
           }

           stage('Git pull') {
              checkout scm
              echo 'checkout'
           }

           stage('robot'){
//                sh "robot --listener 'allure_robotframework' ./Tests"
				sh 'robot allure_robotframework --outputdir ./output/robot ./tests || true'
				echo 'execute'
           }

           stage('allure'){
               allure([
                  disabled: false,
                  includeProperties: false,
                  jdk: '',
                  reportBuildPolicy: 'ALWAYS',
                  results: [[path: 'output/allure']]
               ])
               echo 'report'
           }
    }
}